@model FilmKupriyanov.Models.Film

@{
    ViewBag.Title = "PosterDelete";
}

<h2>Delete poster</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Poster
        </dt>
        <dd>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@Model.Poster" alt="Image" />
                    </div>
                </div>
            </div>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatorUser)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatorUser.UserName)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="PosterDelete" class="btn btn-default" /> | @Html.ActionLink("Back to details", "Details", "Films", new { id = Model.Id }, new {})
    </div>
    }
    
</div>
